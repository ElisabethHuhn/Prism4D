<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainPrism4DActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    android:orientation="vertical"
    >

    <!-- Title line for the list of points -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!-- Project ID -->
        <TextView
            android:text="@string/point_row_project_id_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"

            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Point ID -->
        <TextView
            android:text="@string/point_row_point_id_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"

            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Easting -->
        <TextView
            android:text="@string/point_row_easting_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"

            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Northing -->
        <TextView
            android:text="@string/point_row_northing_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"

            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Elevation -->
        <TextView
            android:text="@string/point_row_elevation_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"

            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Descr -->
        <TextView
            android:text="@string/point_row_description_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="8"

            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

    </LinearLayout>

    <!-- Recycler View of the points -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"

        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pointsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </android.support.v7.widget.RecyclerView>



    </ScrollView>


    <!-- The Footer will be just the buttons -->
    <include layout="@layout/fragment_footer_buttons_inclusion_prism4d"/>


</LinearLayout>

