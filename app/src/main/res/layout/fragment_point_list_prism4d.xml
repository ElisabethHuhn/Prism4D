<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainPrism4DActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    android:orientation="vertical"
    >

    <!-- Title line for the list of points -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:focusable="false"
        android:clickable="false"

        android:paddingTop="@dimen/interum_vertical"

        android:background="@color/colorScreenBackground"
        >

        <!-- Project ID -->
        <TextView
            android:text="@string/point_row_project_id_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Point ID -->
        <TextView
            android:text="@string/point_row_point_id_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Easting -->
        <TextView
            android:text="@string/point_row_easting_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Northing -->
        <TextView
            android:text="@string/point_row_northing_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Elevation -->
        <TextView
            android:text="@string/point_row_elevation_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_marginEnd="8dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Description -->
        <TextView
            android:text="@string/point_row_description_label"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_marginEnd="16dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

    </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!-- Recycler View of the points -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/pointsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </android.support.v7.widget.RecyclerView>

        </HorizontalScrollView>

    </ScrollView>
    <!-- The Footer will be as standard as possible -->
    <include layout="@layout/fragment_footer_buttons_inclusion_prism4d"/>


</LinearLayout>

