<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:focusable="true"
    android:clickable="true"

    android:paddingLeft="@dimen/fragment_horizontal_margin"
    android:paddingRight="@dimen/fragment_horizontal_margin"
    android:paddingTop="@dimen/interum_vertical_margin"
    android:paddingBottom="@dimen/interum_vertical_margin"

    android:background="?android:attr/selectableItemBackground"
    >

    <!-- ID -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/projectRowIDLabel"
            android:text="@string/project_row_id_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="end"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />
        <TextView
            android:id="@+id/projectRowID"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_marginEnd="16dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorWhite"
            />

    </LinearLayout>

    <!-- Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/projectRowNameLabel"
            android:text="@string/project_row_name_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="end"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />
        <TextView
            android:id="@+id/projectRowName"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_marginEnd="16dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorWhite"
            />


    </LinearLayout>

    <!-- Date Last Modified -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/projectRowLastModifiedLabel"
            android:text="@string/project_row_last_modified_date_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="end"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />
        <TextView
            android:id="@+id/projectRowLastModified"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_marginEnd="16dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorWhite"
            />


    </LinearLayout>

    <!-- Size -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/projectRowSizeLabel"
            android:text="@string/project_row_size_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="end"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />
        <TextView
            android:id="@+id/projectRowSize"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_marginEnd="16dp"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorWhite"
            />


    </LinearLayout>

</LinearLayout>